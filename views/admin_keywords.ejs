<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/style.css">
    <title>Admin</title>
</head>

<body class="admin">

    <% var i = '9999'; %>
    <% for (var keyword in books) { %>
        <% var words = books[keyword].Steekwoorden.split(', ') %>
        <% for (var word in words) { %>
            <div class="genre" id="next<%= i %>">    
                <h2><%= words[word] %></h2>
                <div class="buttons">
                    <a id="dislike" data-steekwoord="<%= words[word] %>" href="#next<%= i - 1 %>">Dislike</a>
                    <a id="like" data-steekwoord="<%= words[word] %>" href="#next<%= i - 1 %>">Like</a>
                    </div>
                </div>
            <% i = i - 1 %>
        <% } %>    
    <% } %>

    <div class="genre" id="next12">
        <a id="send">Verstuur lijst</a>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="script/adminKeywords.js"></script>
</body>

</html>