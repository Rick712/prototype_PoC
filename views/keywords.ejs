<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style/style.css">
    <title>Steekwoorden</title>
</head>

<body>
    <div class="container">
        <header>
            <img src="../images/akologo.png" alt="Ako_logo" class="logo" />
            <div class="headerText">
                <p>Geef aan welk steekwoord je voorkeur heeft</p>
            </div>
        </header>
        <div class="content keywords">
            <% var i = '9999'; %>
            <% for (var keyword in books) { %>
                <% var words = books[keyword].Steekwoorden.split(', ') %>
                <% for (var word in words) { %>
                    <div class="content_block" data-index="<%= i %>">
                        <p class="genreText">Steekwoord:</p>
                        <p class="genre"><%= words[word] %></p></p>
                        <div class="line"></div>
                    </div>
                    <% i = i - 1 %>
                <% } %>    
            <% } %>

            <div class="info_block">
                <img src="../images/hand_zwaai.png" alt="hand zwaai" />
                <div class="line"></div>
                <p>Swipe naar links of rechts om je voorkeur aan tegeven</p>
            </div>
            <img src="../images/x.png" alt="no" class="red_x" />
            <img src="../images/heart.png" alt="yes" class="green_heart" />
        </div>

    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="script/scriptKeywords.js"></script>
</body>

</html>